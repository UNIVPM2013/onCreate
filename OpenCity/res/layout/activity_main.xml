<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnGoToCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="Go to Camera" />

    <Button
        android:id="@+id/btnInviaSegnalazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Go to Map" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInviaSegnalazione"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Share on Google+" />

<Button
    android:id="@+id/btnSondaggi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textView1"
    android:layout_below="@+id/textView1"
    android:layout_marginLeft="21dp"
    android:layout_marginTop="46dp"
    android:text="Sondaggi" />

<Button
    android:id="@+id/btnStoricoOrdini"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/btnSondaggi"
    android:layout_alignBottom="@+id/btnSondaggi"
    android:layout_alignParentRight="true"
    android:layout_marginRight="18dp"
    android:text="Storico Ordini" />

<com.google.android.gms.common.SignInButton
    android:id="@+id/sign_in_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textView1"
    android:layout_below="@+id/share_button"
    android:layout_marginTop="20dp"
    android:layout_toLeftOf="@+id/btnStoricoOrdini" >

</com.google.android.gms.common.SignInButton>

<ImageView
    android:id="@+id/imgProfilo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@+id/btnStoricoOrdini"
    android:layout_alignTop="@+id/sign_in_button"
    android:src="@drawable/ic_launcher" />

</RelativeLayout>